  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "express"
    ]
